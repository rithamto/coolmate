<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/category_back"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/img_2" />

        <Button
            android:id="@+id/category_search"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_marginStart="7dp"
            android:layout_weight="8"
            android:background="@color/black"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:gravity="center|left"
            android:paddingStart="10dp"
            android:textAllCaps="false"
            android:textColor="#939090"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/btn_chooses"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginStart="7dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/img_5" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_category_home"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_home_black_24dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:src="@drawable/next" />

                <TextView
                    android:id="@+id/category_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="Danh má»¥c"
                    android:textSize="16sp"
                    android:textColor="#0A1D87" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:src="@drawable/next" />
                <ImageView
                    android:id="@+id/img_category"
                    android:layout_width="38dp"
                    android:layout_height="35dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/category_danhmuc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="16sp"
                    android:textColor="#0A1D87" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/img_16"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border1">

                <androidx.recyclerview.widget.RecyclerView
                    android:paddingLeft="30dp"
                    android:id="@+id/recyclerView_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>