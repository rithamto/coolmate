<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/chonsize_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/img_2" />

        <Spinner
            android:id="@+id/chon_size"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thin_btn"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/thin" />

            <ImageView
                android:paddingLeft="10dp"
                android:id="@+id/blance_btn"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/normal" />

            <ImageView
                android:paddingLeft="20dp"
                android:id="@+id/plump_btn"
                android:layout_width="125dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/plump" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/thin_btn_num"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:text="Gầy"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/blance_btn_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cân đối"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="80sp"/>

            <TextView
                android:id="@+id/plump_btn_num"
                android:paddingLeft="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đầy đặn"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Chiều cao:  "
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/num_chieucao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="125 "
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="cm"
                android:textColor="@color/black"/>
        </LinearLayout>

        <SeekBar
            android:id="@+id/Sb_chieucao"
            style="@android:style/Widget.Material.Light.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:progressTint="#7A2525"
            android:thumb="@drawable/human" />
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Cân nặng:  "
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/num_cannang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="50 "
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="kg"
                android:textColor="@color/black"/>
        </LinearLayout>
        <SeekBar
            android:thumb="@drawable/weight"
            android:id="@+id/Sb_cannang"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="match_parent"
            android:layout_height="80dp" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingLeft="115sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gợi ý"
            android:textColor="@color/black"
            android:textSize="30dp"/>
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/sugest_img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/noimage"/>
    </LinearLayout>
</LinearLayout>