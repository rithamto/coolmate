<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="10">

        <Button
            android:id="@+id/tienich_search"
            android:layout_width="0dp"
            android:layout_height="37dp"
            android:layout_weight="9"
            android:background="@drawable/img_2"
            android:text="Bạn muốn tìm gì hôm nay ?"
            android:textAllCaps="false"
            android:textColor="#939090"
            android:paddingStart="10dp"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:gravity="center|left"/>

        <ImageView
            android:id="@+id/tienich_giohang"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:layout_marginStart="7dp"
            android:src="@drawable/img_2"
            android:background="?android:attr/selectableItemBackgroundBorderless" />
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:orientation="vertical"
        android:rowCount="9"
        android:padding="20dp">
        <ImageButton
            android:id="@+id/tienich_thedt"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mua thẻ điện thoại"
            android:layout_marginTop="8dp"
            android:layout_marginStart="3dp"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_column="0"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/tienich_vemb"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vé máy bay"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/tienich_theqt"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thẻ quà tặng"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="1"/>
        <ImageButton
            android:id="@+id/tienich_naptiendt"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nạp tiền điện thoại"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="3dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="4"/>
        <ImageButton
            android:id="@+id/tienich_thegame"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thẻ game"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="4"/>
        <ImageButton
            android:id="@+id/tienich_vetau"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vé tàu xe"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="4"/>
        <ImageButton
            android:id="@+id/tienich_datphong"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt phòng"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="0"
            android:layout_row="6"/>
        <ImageButton
            android:id="@+id/tienich_ticket"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="5"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ticketbox"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="1"
            android:layout_row="6"/>
        <ImageButton
            android:id="@+id/tienich_diennuoc"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/img_2"
            android:src="@drawable/img_2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện nước"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_column="2"
            android:layout_row="6"/>
    </GridLayout>

</LinearLayout>


